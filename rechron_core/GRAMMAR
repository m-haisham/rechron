expression       => value
value            => prefix
                  | postfix

prefix           => "in" duration_chain
postfix          => duration_chain direction?

duration_chain   => duration (","? duration)*
duration         => NUMBER timeframe
timeframe        => "second"
                  | "minute"
                  | "hour"
                  | "day"
                  | "week"
                  | "month"

direction        => "ago" | "remaining"