expression       => date_time
date_time        => relative

relative         => in_exact
                  | exact

in_exact         => "in" duration_chain
exact            => duration_chain direction

duration_chain   => duration (","? duration)*
duration         => NUMBER timeframe
timeframe        => "second"
                  | "minute"
                  | "hour"
                  | "day"
                  | "week"
                  | "month"

direction        => "ago" | "remaining"